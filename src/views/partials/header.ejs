<header class="p-3 bg-dark text-white fixed-top">
  <div class="container">
    <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 text-white text-decoration-none">
        <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
      </a>

      <ul class="nav col-12 col-lg-auto me-lg-auto mb-4 justify-content-center mb-md-0">
        <a href="/"><img class="logo" src="/img/index/—Pngtree—football_799345.png" alt="Logo" height="80px" width="80px" margin="20px"></a>
        <li><a href="/" class="nav-link px-4 text-blue ">K2SPORTS</a></li>
        <li><a href="/trabalheConosco" class="nav-link px-2 text-white">TRABALHE CONOSCO</a></li>
        <li><a href="/sobre" class="nav-link px-2 text-white">SOBRE</a></li>
        <li><a href="/promocao" class="nav-link px-2 text-white">PROMOÇÃO</a></li>
        <% if(locals.usuario && usuario.tipoUsuario == "admin"){ %>
          <li><a href="/adm/produtos" class="nav-link px-2 text-blue">ADM</a></li>
        <% } %>
       
      </ul>

      <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search">
        <input type="search" class="form-control form-control-dark text-white bg-dark" placeholder="PROCURAR..." aria-label="PROCURAR">
        
      </form>
      <a href="/carrinho"><img class="logo" src="/img/index/carrinho.png" alt="Logo" height="80px" width="80px" margin="20px"></a>
      <% if(locals.usuario && usuario) { %>
        <div class="text-end">
          <span>Olá <%=usuario.nome%></span>
          <a  href="/logout" class="btn btn-danger">SAIR</a>
        </div>
      <% }else { %>
        <div class="text-end">
          <a  href="/login" class="btn btn-outline-light me-2">LOGIN</a>
          <a  href="/cadastrar" class="btn btn-warning">CADASTRAR</a>
        </div>
      <% } %>
    </div>
  </div>
</header>